{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}

